" NOTICE: This plugin does not work in silent mode. ex. winline()
" NOTE: :help -s-ex

let g:node_host_prog = expand('<sfile>:h:h') . '/node_modules/neovim/bin/cli.js'
call themis#option('recursive', 1)

runtime! plugin/rplugin.vim

function! GestureTestBeforeEach() abort
    " NOTICE: Disable <LeftMouse>
    call gesture#custom#set('cursor_setter', '')
    call gesture#custom#set('enabled_input_view', v:true)
endfunction

function! GestureTestBefore() abort
    let s:root = getcwd()
    return s:root
endfunction

function! GestureTestAfterEach() abort
    call gesture#clear()
    call gesture#custom#clear()
    call health#gesture#_set_test_path('')
    silent! %bwipeout!
    execute 'cd ' . s:root
endfunction
