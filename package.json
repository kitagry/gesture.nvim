{
    "private": true,
    "name": "gesture.nvim",
    "version": "0.0.15",
    "description": "A mouse gesture plugin for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^6.2.1",
        "neovim": "^4.8.0",
        "tslib": "^1.11.1"
    },
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.4",
        "jest": "^25.5.0",
        "ts-jest": "^25.4.0",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p tsconfig.json && node ./version.js > ./lib/version.json",
        "watch": "tsc -p tsconfig.json --watch true",
        "setup": "node ./setup.js"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}
