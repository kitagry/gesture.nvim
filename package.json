{
    "private": true,
    "name": "gesture.nvim",
    "version": "0.0.13",
    "description": "A mouse gesture plugin for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^4.3.1",
        "neovim": "^4.5.0",
        "tslib": "^1.9.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.4",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p tsconfig.json && node ./version.js > ./lib/version.json",
        "watch": "tsc -p tsconfig.json --watch true",
        "setup": "node ./setup.js"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}
