{
    "private": true,
    "name": "gesture.nvim",
    "version": "0.0.7",
    "description": "A mouse gesture plugin for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^3.0.6",
        "neovim": "^4.5.0",
        "tslib": "^1.9.3"
    },
    "devDependencies": {
        "@types/jest": "^23.3.14",
        "@types/node": "^10.14.6",
        "jest": "^23.6.0",
        "ts-jest": "^23.10.5",
        "typescript": "^3.4.5"
    },
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p tsconfig.json && node ./version.js > ./lib/version.json",
        "watch": "tsc -p tsconfig.json --watch true",
        "setup": "node ./setup.js"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}
